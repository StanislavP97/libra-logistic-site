RewriteEngine On

# Не трогаем реальные файлы и папки
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Редирект корня на язык (если надо)
RewriteRule ^$ ru/ [R=301,L]

# Принудительный слэш после языка
RewriteCond %{REQUEST_URI} ^/(en|ru|ro|ua)$ [NC]
RewriteRule ^ %1/ [R=301,L]

# Отдаём index.html для /lang/ и /lang
RewriteRule ^(en|ru|ro|ua)/?$ $1/index.html [L]

